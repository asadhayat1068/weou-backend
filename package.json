    "@types/node-localstorage": "^1.3.3",
    "@types/ws": "^8.5.10",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@opensea/stream-js": "^0.1.3",
    "@types/express-session": "^1.18.0",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.1",
    "applicationinsights": "^2.6.0",
    "aws-sdk": "^2.1643.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.12.1",
    "express": "^4.18.2",
    "express-ruid": "^1.1.4",
    "express-session": "^1.18.0",
    "joi": "^17.9.2",
    "morgan-body": "^2.6.9",
    "node-localstorage": "^3.0.5",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
